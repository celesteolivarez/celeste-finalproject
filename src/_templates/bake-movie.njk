{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ title }}{% endblock %}

{% block page_description %}{{ title }} by {{ author }}{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
          <img src="../img/{{ slug }}.jpg" alt="" class="img-fluid mb-4">
      </div>
      <div class="col-sm-8">
          <h1 class="display-5 fw-bold mb-3">{{ title }}</h1>
          <p class="mb-1"><strong>Director:</strong> {{ director }}</p>
          <p class="mb-1"><strong>Rating:</strong> {{ rating }}</p>
          <p class="mt-4"><strong>About:</strong> {{ about}}</p>
      </div>
    </div>

    <video class="mt-3" width="100%" controls>
        <source src="/videos/{{ trailer }}" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <hr class="my-5">

    <div class="row mt-5">
      <div class="col">
        <h2 class="h4">Why I Love This Movie</h2>
        <p class="mt-3" style="white-space: pre-line;">{{ review | safe }}</p>
      </div>
    </div>
  </article>
{% endblock %}