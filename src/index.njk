{% extends '_templates/base.njk' %}

{% block page_title %}Celeste Olivarez's Movies{% endblock %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col">
        <h1>What Movies Mean to Me</h1>
        <p>blah...blah.. blah. I'll add some heartfelt stuff later.</p>
    </div>
  </div>

  <div class="mt-5">
    <h2 class="h4">Movie Theaters Around Austin</h2>
    <div class="row row-cols-1 row-cols-md-2 g-4 mt-3">
      {% for theater in theaters.theaters %}
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">{{ theater.theater_name }}</h5>
            <p class="card-text"><strong>Address:</strong> {{ theater.address }}</p>
            <p class="card-text"><strong>Rating:</strong> {{ theater.rating }}</p>
            <a href="{{ theater.source }}" target="_blank" class="btn btn-sm btn-outline-primary">Visit Website</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
