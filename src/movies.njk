{% extends '_templates/base.njk' %}

{% block page_title %}Movies{% endblock %}

{% block page_description %}A list of movies that I love.{% endblock %}

{% block content %}
<article class="container">
  <h1>Blah blah blah here are my top four movies</h1>
  <p>here i will include my top four movies</p>

<div class="container">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    {% for movie in movies.movies %}
    <div class="col">
      <div class="card h-100">
        <div class="row g-0 h-100">
          <div class="col-md-4">
            <img src="{{ movie.image }}" class="img-fluid rounded-start h-100 w-100" alt="{{ movie.title }}" style="object-fit: cover;">
          </div>
          <div class="col-md-8">
            <div class="card-body d-flex flex-column h-100">
              <h5 class="card-title">
                <a href="{{ movie.slug }}.html" class="text-decoration-none">{{ movie.title }}</a>
              </h5>
              <p class="card-text">{{ movie.review }}</p>
              <p class="card-text mt-auto">
                <strong>Rating:</strong> {{ movie.rating }}<br>
                <small class="text-body-secondary">Directed by {{ movie.director }}</small>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
</article>
{% endblock %}